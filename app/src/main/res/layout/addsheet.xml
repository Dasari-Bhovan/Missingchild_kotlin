<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="350dp"

    android:background="@drawable/dialogbg">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_remove_24"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/AddReportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:text="Add Report"
        android:padding="8dp"
        android:textColor="#333333"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:textSize="25dp" />


        <ImageView
            android:id="@+id/cancelButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_clear_24" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ScrollView to make the layout responsive and scrollable -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <!-- Linear layout for vertical arrangement -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Name EditText -->
                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_background"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="Name"
                    android:inputType="textPersonName" />
                <EditText
                    android:id="@+id/editTextAge"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_background"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="Age"
                    android:inputType="number" />
                <EditText
                    android:id="@+id/editTextHeight"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_background"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="Height (in cms)"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/editTextWeight"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_background"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="Weight (in kg)"
                    android:inputType="numberDecimal" />
                <EditText
                    android:id="@+id/editTextDescription"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_background"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="Description"
                    android:inputType="text|textMultiLine" />
                <EditText
                    android:id="@+id/editTextMoles"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_background"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="Moles"
                    android:inputType="textPersonName" />
                <TextView
                    android:id="@+id/LastSeenWarn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Last Seen Time format: YYYY-MM-DD HH:MM:SS"
                    tools:visibility="visible" />
                <EditText
                    android:id="@+id/editLastSeenTime"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_background"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="Last seen time"
                    android:inputType="datetime" />
                <EditText
                    android:id="@+id/editLastSeenAddress"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_background"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="Last seen Address"
                    android:inputType="text|textMultiLine" />
                <EditText
                    android:id="@+id/editClothingDescriptiom"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_background"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="Clothing description"
                    android:inputType="text|textMultiLine" />
                <EditText
                    android:id="@+id/editPhysicalFeatures"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_background"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="Physical Features"
                    android:inputType="text|textMultiLine" />
                <EditText
                    android:id="@+id/editMedicalInformation"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_background"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="Medical Information"
                    android:inputType="text|textMultiLine" />
                <EditText
                    android:id="@+id/editBehaviourFeatures"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_background"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="Behaviour Characteristics"
                    android:inputType="text|textMultiLine" />
                <EditText
                    android:id="@+id/editAlternateMobileNumber"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_background"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:hint="Alternate Mobile Number"
                    android:inputType="number" />


                <!-- Age EditText -->


                <!-- Add other form fields as needed -->
                <Button
                    android:id="@+id/selectImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Images"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:padding="16dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>

                <!-- Submit Button -->
                <TextView
                    android:id="@+id/imageCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_light"
                    android:text=" Select at least 4 images "
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>